{   
    "logging": {
        "logs": {
            "default": {
                "level": "DEBUG",
                "writer": {
                  "output": "stderr"
                }
            }
        }
    },
    "apps": {
      "http": {
        "http_port": 9080,
        "https_port": 9443,
        "servers": {
          "estserver": {
            "listen": [
              "estserver.local.example.com:9443"
            ],
            "routes": [
              {
                "group": "est",
                "match": [
                  {
                    "path": [
                      "/.well-known/est/*"
                    ]
                  }
                ],
                "handle": [
                  {
                    "handler": "est",
                    "ca": "est-example",
                    "allowed_hosts": [
                      "estserver.local.example.com"
                    ],
                    "rate_limit": 0,
                    "enabled_basic_auth": false,
                    "basic_auth_username": "username",
                    "basic_auth_password": "password"
                  }
                ]
              }
            ],
            "logs": {},
            "tls_connection_policies": [{
              "client_authentication": {
                "mode": "request"
              }
            }]
          }
        }
      },
      "tls": {
        "automation": {
          "policies": [
            {
              "subjects": ["localhost"],
              "issuers": [{
                "module": "internal",
                "ca": "local"
              }],
              "on_demand": true
            },
            {
              "subjects": ["estserver.local.example.com"],
              "issuers": [{
                "module": "internal",
                "ca": "est-example"
              }],
              "on_demand": true
            }
          ]
        }
      },
      "pki": {
        "certificate_authorities": {
          "local": {},
          "est-example": {
            "name": "EST Example",
            "root_common_name": "EST Root Example",
            "intermediate_common_name": "EST Intermediate Example",
            "install_trust": false
          }
        }
      }
    }
  }